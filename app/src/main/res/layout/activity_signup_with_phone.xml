<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="@color/black"
        android:layout_alignStart="@id/phone_number_et"
        android:layout_marginTop="50dp"
        android:textSize="32sp"
        />

    <TextView
        android:id="@+id/switch_to_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up with email"
        android:textColor="@color/black"
        android:layout_alignEnd="@id/phone_number_et"
        android:layout_above="@id/phone_number_et"
        android:textSize="8sp"
        />

    <EditText
        android:id="@+id/phone_number_et"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:autofillHints="phone"
        android:background="@color/grey_light"
        android:hint="Phone number"
        android:padding="10dp" />

    <EditText
        android:id="@+id/password_et"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:autofillHints="password"
        android:background="@color/grey_light"
        android:hint="Password"
        android:padding="10dp" />

    <RelativeLayout
        android:id="@+id/verification_rl_2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >

        <EditText
            android:id="@+id/verification_code_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/sendCodeToPhone_bt"
            android:background="@color/grey_light"
            android:hint="Enter 6-digit code"
            android:padding="10dp" />

        <Button
            android:id="@+id/sendCodeToPhone_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/white"
            android:gravity="center_vertical"
            android:text="Send code"
            android:textColor="@color/green_heavy" />

    </RelativeLayout>

    <Button
        android:id="@+id/continue_with_phone_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/verification_rl_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:padding="10dp"
        android:text="Next"
        android:textColor="@color/white" />



</RelativeLayout>